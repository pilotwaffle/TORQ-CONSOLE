# TORQ CONSOLE Environment Configuration Template
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to Git - it contains secret keys!

# =============================================================================
# CORE API KEYS - Replace with your actual API keys
# =============================================================================

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
FRED_API_KEY=your_fred_key_here

# News and Information APIs
NEWS_API_KEY=your_news_api_key_here

# Google Search API
GOOGLE_SEARCH_API_KEY=your_google_search_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Brave Search API (2,000 free queries/month)
BRAVE_SEARCH_API_KEY=your_brave_search_key_here

# AI/LLM Provider API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
DEEPSEEK_API_KEY=your_deepseek_key_here

# X.AI/Grok API Configuration
XAI_API_KEY=your_xai_key_here
XAI_MODEL=grok-beta
XAI_API_BASE_URL=https://api.x.ai/v1

# Twitter/X API Configuration
TWITTER_API_KEY=your_twitter_key_here
TWITTER_API_SECRET=your_twitter_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# =============================================================================
# TBS CONFIGURATION
# =============================================================================

TBS_FALLBACK_MODE=disabled
TBS_DEMO_DATA_SOURCE=disabled
TBS_WEB_SEARCH_PROXY=enabled
TBS_PROXY_TIMEOUT=30
TBS_MAX_SEARCH_RESULTS=10

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

TBS_REALTIME_DATA=enabled
TBS_CACHE_ENABLED=true
TBS_CACHE_DURATION=300
TBS_RETRY_ATTEMPTS=3
TBS_REQUEST_TIMEOUT=30

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=INFO

# MCP Server Configuration
MCP_SERVER_ENABLED=true
MCP_SERVER_PORT=3100
MCP_PROXY_SERVER_PORT=3101

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

RATE_LIMITING_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
SECURE_HEADERS_ENABLED=true

# =============================================================================
# GPU ACCELERATION CONFIGURATION
# =============================================================================

LLAMA_CPP_MODEL_PATH=path/to/your/model.gguf
LLAMA_CPP_N_GPU_LAYERS=28
LLAMA_CPP_N_CTX=2048
LLAMA_CPP_N_BATCH=512
LLAMA_CPP_VERBOSE=false

# =============================================================================
# CODEBASE INDEXER CONFIGURATION
# =============================================================================

ENABLE_CODEBASE_INDEXING=true
CODEBASE_PATH=./TORQ-CONSOLE
INDEXER_EMBEDDING_MODEL=all-MiniLM-L6-v2
INDEXER_TOP_K=5

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace all placeholder values with your actual API keys
# 3. NEVER commit .env to Git - it's in .gitignore
# 4. Keep your API keys secret and secure
# 5. Rotate keys regularly (every 90 days recommended)
# 6. Set ENVIRONMENT=production for live deployments
