<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TORQ Console - Antigravity</title>

    <!-- Scripts -->
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>

    <!-- Icons -->
    <link rel="icon" type="image/x-icon" href="/static/favicon.ico">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Styles -->
    <link rel="stylesheet" href="/static/antigravity-theme.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github-dark.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>

    <style>
        /* Additional specific styles for this layout */
        .layout-grid {
            display: grid;
            grid-template-columns: 300px 1fr 350px;
            gap: 1.5rem;
            height: calc(100vh - 8rem);
        }

        .mcp-panel {
            max-height: calc(100vh - 12rem);
            overflow-y: auto;
        }

        .chat-panel {
            display: flex;
            flex-direction: column;
            max-height: calc(100vh - 12rem);
        }

        .chat-messages {
            flex: 1;
            overflow-y: auto;
            padding: 1rem;
            background: rgba(0, 0, 0, 0.2);
            border-radius: 12px;
            margin-bottom: 1rem;
        }

        .chat-input-container {
            display: flex;
            gap: 1rem;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            align-items: flex-end;
        }

        .chat-input {
            flex: 1;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            resize: none;
            max-height: 150px;
        }

        .tools-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1rem;
        }

        .tool-card {
            background: var(--gradient-secondary);
            padding: 1.5rem;
            border-radius: 16px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .tool-card:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: var(--shadow-float);
        }

        .tool-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .status-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: var(--torq-darker);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 100;
        }

        .command-input {
            background: rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(255, 107, 53, 0.3);
            border-radius: 8px;
            padding: 0.5rem 1rem;
            color: var(--torq-light);
            font-family: var(--font-mono);
            width: 100%;
            max-width: 500px;
        }

        .command-input:focus {
            outline: none;
            border-color: var(--torq-primary);
            box-shadow: 0 0 20px rgba(255, 107, 53, 0.3);
        }
    </style>
</head>
<body>
    <!-- Floating Orbs Background -->
    <div class="floating-orb orb-1"></div>
    <div class="floating-orb orb-2"></div>
    <div class="floating-orb orb-3"></div>

    <!-- Header -->
    <div class="main-container">
        <header class="header">
            <div class="logo">
                <div class="logo-icon">TQ</div>
                <div class="logo-text">TORQ Console</div>
            </div>

            <nav class="nav">
                <a href="#" class="nav-item active">Chat</a>
                <a href="#" class="nav-item">Files</a>
                <a href="#" class="nav-item">Tools</a>
                <a href="#" class="nav-item">Settings</a>
            </nav>

            <div class="header-actions">
                <div class="status online">
                    <span class="status-dot"></span>
                    Connected
                </div>
            </div>
        </header>

        <!-- Main Layout -->
        <div class="layout-grid">
            <!-- Left Panel - MCP Tools -->
            <div class="panel mcp-panel">
                <div class="panel-header">
                    <h2 class="panel-title">üîß MCP Tools</h2>
                    <button class="btn btn-secondary">
                        <span>+</span> Add
                    </button>
                </div>

                <div class="tools-grid">
                    <div class="tool-card" hx-get="/mcp/filesystem" hx-target="#content">
                        <div class="tool-icon">üìÅ</div>
                        <h3>Filesystem</h3>
                        <p>Browse and edit files</p>
                    </div>

                    <div class="tool-card" hx-get="/mcp/git" hx-target="#content">
                        <div class="tool-icon">üåø</div>
                        <h3>Git</h3>
                        <p>Version control</p>
                    </div>

                    <div class="tool-card" hx-get="/mcp/terminal" hx-target="#content">
                        <div class="tool-icon">üíª</div>
                        <h3>Terminal</h3>
                        <p>Run commands</p>
                    </div>

                    <div class="tool-card" hx-get="/mcp/database" hx-target="#content">
                        <div class="tool-icon">üóÑÔ∏è</div>
                        <h3>Database</h3>
                        <p>Query data</p>
                    </div>

                    <div class="tool-card" hx-get="/mcp/memory" hx-target="#content">
                        <div class="tool-icon">üß†</div>
                        <h3>Memory</h3>
                        <p>AI memory store</p>
                    </div>

                    <div class="tool-card" hx-get="/mcp/search" hx-target="#content">
                        <div class="tool-icon">üîç</div>
                        <h3>Search</h3>
                        <p>Web search</p>
                    </div>
                </div>
            </div>

            <!-- Center Panel - Chat -->
            <div class="panel chat-panel">
                <div class="panel-header">
                    <h2 class="panel-title">üí¨ AI Assistant</h2>
                    <div class="flex gap-2">
                        <button class="btn btn-secondary" onclick="clearChat()">
                            Clear
                        </button>
                        <button class="btn btn-secondary" onclick="exportChat()">
                            Export
                        </button>
                    </div>
                </div>

                <div class="chat-messages" id="chatMessages">
                    <div class="chat-message assistant animate-in">
                        <p>Hello! I'm TORQ, your AI pair programmer. I can help you:</p>
                        <ul>
                            <li>Write and edit code</li>
                            <li>Explain complex concepts</li>
                            <li>Debug issues</li>
                            <li>Review and optimize code</li>
                            <li>Generate documentation</li>
                        </ul>
                        <p>What would you like to work on today?</p>
                    </div>
                </div>

                <div class="chat-input-container">
                    <textarea
                        class="input chat-input"
                        id="chatInput"
                        placeholder="Ask me anything... (Shift+Enter for new line)"
                        rows="1"
                        onkeydown="handleChatKeydown(event)"
                    ></textarea>
                    <button class="btn btn-primary" onclick="sendMessage()">
                        Send
                    </button>
                </div>
            </div>

            <!-- Right Panel - Context & Info -->
            <div class="panel">
                <div class="panel-header">
                    <h2 class="panel-title">üìã Context</h2>
                </div>

                <div class="file-tree">
                    <h3 style="margin-top: 0;">Current Project</h3>
                    <div class="file-item active">
                        <span>üìÅ</span> src/
                    </div>
                    <div class="file-item" style="margin-left: 1rem;">
                        <span>üìÑ</span> main.py
                    </div>
                    <div class="file-item" style="margin-left: 1rem;">
                        <span>üìÑ</span> app.py
                    </div>
                    <div class="file-item">
                        <span>üìÅ</span> tests/
                    </div>
                    <div class="file-item">
                        <span>üìÑ</span> README.md
                    </div>
                </div>

                <div style="margin-top: 2rem;">
                    <h3>Quick Actions</h3>
                    <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                        <button class="btn btn-secondary" style="width: 100%;">
                            üéØ Generate Plan
                        </button>
                        <button class="btn btn-secondary" style="width: 100%;">
                            üîç Code Review
                        </button>
                        <button class="btn btn-secondary" style="width: 100%;">
                            üìö Add Documentation
                        </button>
                        <button class="btn btn-secondary" style="width: 100%;">
                            üêõ Debug Mode
                        </button>
                    </div>
                </div>

                <div style="margin-top: 2rem;">
                    <h3>Model</h3>
                    <select class="input" id="modelSelect">
                        <option value="claude-3-sonnet">Claude 3 Sonnet</option>
                        <option value="claude-3-opus">Claude 3 Opus</option>
                        <option value="deepseek-chat">DeepSeek Chat</option>
                        <option value="gpt-4">GPT-4</option>
                    </select>
                </div>

                <div style="margin-top: 2rem;">
                    <h3>Stats</h3>
                    <div style="font-size: 0.875rem; color: var(--torq-muted);">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                            <span>Messages:</span>
                            <span id="messageCount">1</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                            <span>Tokens:</span>
                            <span id="tokenCount">0</span>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span>Session:</span>
                            <span id="sessionTime">0:00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Bar -->
    <div class="status-bar">
        <input
            type="text"
            class="command-input"
            placeholder="Run command... (Press / to focus)"
            id="commandInput"
        />

        <div style="display: flex; gap: 2rem; align-items: center;">
            <div class="status online">
                <span class="status-dot"></span>
                Claude API
            </div>
            <div style="color: var(--torq-muted); font-size: 0.875rem;">
                Session: <span id="sessionId">active</span>
            </div>
        </div>
    </div>

    <script>
        // Initialize
        let messageCount = 1;
        let sessionStart = Date.now();

        // Session timer
        setInterval(() => {
            const elapsed = Math.floor((Date.now() - sessionStart) / 1000);
            const minutes = Math.floor(elapsed / 60);
            const seconds = elapsed % 60;
            document.getElementById('sessionTime').textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
        }, 1000);

        // Chat functions
        function handleChatKeydown(event) {
            if (event.key === 'Enter' && !event.shiftKey) {
                event.preventDefault();
                sendMessage();
            }
        }

        function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();

            if (!message) return;

            // Add user message
            addMessage('user', message);

            // Clear input
            input.value = '';
            input.style.height = 'auto';

            // Show loading
            const loadingMsg = addMessage('assistant', 'Thinking...', true);

            // Simulate AI response (replace with actual API call)
            setTimeout(() => {
                loadingMsg.classList.remove('loading');
                loadingMsg.innerHTML = `<p>I received your message: "${message}". How can I help you with that?</p>`;
                messageCount++;
                document.getElementById('messageCount').textContent = messageCount;
            }, 1000);
        }

        function addMessage(role, content, isLoading = false) {
            const messagesDiv = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = `chat-message ${role} animate-in`;

            if (isLoading) {
                messageDiv.classList.add('loading');
                messageDiv.innerHTML = `<p>${content}</p>`;
            } else {
                messageDiv.innerHTML = `<p>${content}</p>`;
            }

            messagesDiv.appendChild(messageDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;

            return messageDiv;
        }

        function clearChat() {
            if (confirm('Clear all messages?')) {
                document.getElementById('chatMessages').innerHTML = '';
                messageCount = 0;
                document.getElementById('messageCount').textContent = '0';
            }
        }

        function exportChat() {
            const messages = document.getElementById('chatMessages').innerHTML;
            const blob = new Blob([messages], { type: 'text/html' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'torq-chat-export.html';
            a.click();
            URL.revokeObjectURL(url);
        }

        // Command input
        document.addEventListener('keydown', (e) => {
            if (e.key === '/' && document.activeElement !== document.getElementById('commandInput')) {
                e.preventDefault();
                document.getElementById('commandInput').focus();
            }
        });

        // Auto-resize textarea
        document.getElementById('chatInput').addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 150) + 'px';
        });

        // Initialize highlight.js
        hljs.highlightAll();
    </script>
</body>
</html>